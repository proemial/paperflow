{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "pipeline": {
    "build": {
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ],
      "env": [
        "OPENAI_API_KEY2",
        "REDIS_PROMPTS_URL",
        "REDIS_PROMPTS_TOKEN",
        "REDIS_MODEL_OUTPUT_URL",
        "REDIS_MODEL_OUTPUT_TOKEN",
        "REDIS_INGESTION_URL",
        "REDIS_INGESTION_TOKEN",

        "MONGO_CONNECT_STRING",
        "QSTASH_URL",
        "QSTASH_TOKEN",
        "QSTASH_CURRENT_SIGNING_KEY",
        "QSTASH_NEXT_SIGNING_KEY"
      ]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": false
    }
  }
}